<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    tools:context=".controller.ProfileActivity"
    android:background="@drawable/background_app3"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/upa_linear_layout_margin"
        android:layout_marginBottom="@dimen/upa_linear_layout_margin"
        android:layout_marginHorizontal="@dimen/upa_linear_layout_margin"
        android:background="@drawable/round_border_transparent_layout"
        android:orientation="vertical">

        <!-- PARTIE TITRE PRINCIPAL -->
        <TextView
            android:id="@+id/update_activity_title_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/upa_main_title_layout_margin_top"
            android:layout_marginBottom="@dimen/upa_main_title_layout_margin_bottom"
            android:text="@string/title_update"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/upa_main_title_text_size"
            tools:text="Modifiez vos informations" />


        <!-- PARTIE PSEUDOMYME -->
        <TextView
            android:id="@+id/update_activity_username_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/colorWhite"
            android:text="@string/username_field" />
        <LinearLayout
            android:layout_width="@dimen/upa_linear_layout_width_param"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/upa_linear_layout_margin_bottom_param"
            android:layout_gravity="center_horizontal">
            <EditText
                android:id="@+id/update_activity_username_field"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/upa_edit_text_layout_height"
                android:ems="10"
                android:layout_gravity="center"
                android:gravity="center"
                android:hint="@string/username_field"
                android:importantForAutofill="no"
                android:background="@drawable/round_border_text_fill"
                android:inputType="textPersonName"
                tools:targetApi="o" />
        </LinearLayout>
        <Button
            android:id="@+id/update_activity_username_submit"
            android:layout_width="@dimen/upa_button_layout_width"
            android:layout_height="@dimen/upa_button_layout_height"
            android:background="@drawable/round_button_blue"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/upa_button_layout_margin_bottom"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/upa_button_text_size"
            android:text="@string/submit_update_username" />

        <!-- PARTIE PRENOM -->
        <TextView
            android:id="@+id/update_activity_firstName_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/colorWhite"
            android:text="@string/firstName_field" />

        <LinearLayout
            android:layout_width="@dimen/upa_linear_layout_width_param"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/upa_linear_layout_margin_bottom_param"
            android:layout_gravity="center_horizontal">
            <EditText
                android:id="@+id/update_activity_firstName_field"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/upa_edit_text_layout_height"
                android:ems="10"
                android:hint="@string/firstName_field"
                android:gravity="center"
                android:importantForAutofill="no"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/round_border_text_fill"
                android:inputType="textPersonName"
                android:text="@string/firstName_field"
                tools:targetApi="o" />
        </LinearLayout>
        <Button
            android:id="@+id/update_activity_firstName_submit"
            android:layout_width="@dimen/upa_button_layout_width"
            android:layout_height="@dimen/upa_button_layout_height"
            android:layout_gravity="center"
            android:background="@drawable/round_button_blue"
            android:layout_marginBottom="@dimen/upa_button_layout_margin_bottom"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/upa_button_text_size"
            android:text="@string/submit_update_first_name" />


        <!-- PARTIE NOM -->
        <TextView
            android:id="@+id/update_activity_lastName_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/colorWhite"
            android:text="@string/lastName_field" />
        <LinearLayout
            android:layout_width="@dimen/upa_linear_layout_width_param"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/upa_linear_layout_margin_bottom_param"
            android:layout_gravity="center_horizontal">
            <EditText
                android:id="@+id/update_activity_lastName_field"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/upa_edit_text_layout_height"
                android:ems="10"
                android:hint="@string/lastName_field"
                android:importantForAutofill="no"
                android:background="@drawable/round_border_text_fill"
                android:gravity="center"
                android:inputType="textPersonName"
                android:labelFor="@+id/update_activity_lastName_label"
                android:text="@string/lastName_field"
                tools:targetApi="o" />
        </LinearLayout>
        <Button
            android:id="@+id/update_activity_lastName_submit"
            android:background="@drawable/round_button_blue"
            android:layout_width="@dimen/upa_button_layout_width"
            android:layout_height="@dimen/upa_button_layout_height"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/upa_button_layout_margin_bottom"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/upa_button_text_size"
            android:text="@string/submit_update_last_name" />

        <Button
            android:id="@+id/return_to_profil_activity_button"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/upa_button_layout_margin_bottom"
            android:background="@drawable/delete_button" />


    </LinearLayout>

</LinearLayout>